<div class="row">
    <div class="col-md-6">
        <div class="signIn hidden">
            <h1 class="display-4 m-b-2">Sign In</h1>
            <!-- register form-->
            <form method="POST" id="_signInForm" action="/authentication/signin">
                <div class="form-group"><label for="name">E-mail:</label><input class="form-control" id="username" type="text" placeholder="Please, type your best E-mail" name="username" /></div>
                <div class="form-group"><label for="name">Passowrd:</label><input class="form-control" id="password" type="password" placeholder="You password" name="password" /></div>
                <div class="row">
                    <div class="col-md-4 text-left"><button class="btn btn-lg btn-primary" type="submit">Sign In</button></div>
                    <div class="col-md-8 text-right"><span class="switchView" target="signOn">Or just <b>SignOn</b> if you are new here</span></div>
                </div>
            </form>
        </div>
        <div class="signOn">
            <h1 class="display-4 m-b-2">Sign On</h1>
            <!-- register form-->
            <form method="POST" id="_signOnForm" action="/authentication/signon">
                <div class="form-group"><label for="/authentication/singon">E-mail:</label><input class="form-control" id="email" type="text" placeholder="Please, type your best E-mail" name="email"/></div>
                <div class="form-group"><label for="name">Passowrd:</label><input class="form-control" id="password" type="password" placeholder="You password" name="password" /></div>
                <div class="form-group"><label for="name">Repeat your Passowrd:</label><input class="form-control" id="password2" type="password" placeholder="type it again" name="password2"/></div>
                <div class="row">
                    <div class="col-md-4 text-left"><button class="btn btn-lg btn-primary" type="submit">Sign On</button></div>
                    <div class="col-md-8 text-right"><span class="switchView" target="signIn">Or just <b>SignIn</b> if you are not new here</span></div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6"><img src="/img/app/sms_demo.png" alt="" style="height:600px; margin-top:100px;" /></div>
</div>