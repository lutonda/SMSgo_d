<div class="row" style="margin-top:50px; width:100%">
    <div class="col-md-3">
        <img src="/img/avatar.png" alt="..." class="img-thumbnail float-left hide-on-mobile">
    </div>
    <div class="col-md-9" style="background: #efefef; padding:2%">
        <h3>Your APIKEY</h3>
        <h5 class="text-mobile">{{user.apikey}}</h5>
        <hr>
        <h3></h3>
        <div class="row">
            <div class="col-md-3">{{user.name}}</div>
            <div class="col-md-3">{{user.email}}</div>
            <div class="col-md-3">Stations: {{user.stations.length}}</div>
            <div class="col-md-3"></div>
        </div>


    </div>
</div>
<div class="row" style="margin-top: 15px">
    
    {{#if stations }}
    <div class="row">
        <div class="col-md-4 text-center">
            <h4><i class="fa fa-exclamation-triangle fa-6x"></i><br><br>You have no Device paired to your account, please follow the next 2 steps to...</h4>
        </div>
        <div class="col-md-4 card">
            <h4>1- Download Your App</h4>
                    <img src="/img/app/app_store.png" class="img-thumbnail"/>
                    <img src="/img/app/play_store.png" class="img-thumbnail"/>
        </div>
        <div class="col-md-4 card">
            <div class="row">
                <div >
                    <h4>2- Enter your SMSgo credentials or just scan the qr code</h4>
                </div>
                <div class="col-md-12">
                    <img src="{{userQr}}" class="img-thumbnail-x"/>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col col-md-8 col-sm-12">
    <form method="POST" id="sendmessageform" action="/io/{{user.name}}/apijob">
        
            <div class="row">
            {{#each user.stations}}
            <div class="col-md-2 col-sm-3 col-xs-3 radio text-center">
                <label for="_key_{{key}}" class="select"><img src="/img/smartphone.png" style="width: 98%">
                <input type="radio" name="station" id="_key_{{key}}" value="{{key}}" class="hidden"><span style="font-size: 18px">{{key}} | {{ phoneNumber }}| </span> <i class="fab fa-android fa-2x"></i></label>
            </div>
            {{/each}}
        </div>
            <div class="form-group"><label for="to"> Recipient phone number:</label>
                <input class="form-control" id="to" type="number" autocomplete="no" placeholder="Please, type your best E-mail" name="to"
                    autocomplete='no' /></div>
            <div class="form-group"><label for="name">Your message:</label>
                <textarea class="form-control" id="message" type="password" name="message"></textarea>
            </div>
            <div class="row">
                <div class="col-md-4 text-left"><button class="btn btn-lg btn-primary" type="submit">Send</button></div>
                <div class="col-md-8 text-right"><span>Or just Sign In if you are not new here</span></div>
            </div>
        </div>
    </form>
        <div class="col col-md-4 col-sm-12 hide-on-mobile">
            <img src="{{userQr}}" class="img-thumbnail" style="width:100%"/>
        </div>
        </div>
    {{/if}}
</div>
